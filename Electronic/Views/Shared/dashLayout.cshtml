
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>
 
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        a {
            cursor: pointer;
        }

        .add, .edit {
            width: 350px;
            height: 350px;
            background-color: blanchedalmond;
            border: 2px solid black;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            padding: 20px;
        }

        body {
            margin: 0;
            padding: 0;
        }

        .selected {
            background-color: lightblue;
        }

        #body {
            display: flex;
            flex-direction: column;
        }

        #menu {
            border: 5px solid #000000;
            height: 8vh;
            width: 100vw;
            background-color: black;
        }

            #menu ul {
                display: flex;
                justify-content: center;
            }

                #menu ul li {
                    border: 2px #ff0000;
                    margin: 13px;
                    list-style: none;
                    border: 2px red;
                }

                    #menu ul li a {
                        color: white;
                        text-decoration: none;
                        font-size: 20px;
                        padding: 15px;
                    }

                        #menu ul li a:hover {
                            text-decoration: underline;
                            cursor: pointer;
                        }

        #content {
            height: 92vh;
            width: 100vw;
        }
    </style>
</head>
<body>
    <div id="body">

        @RenderBody()
    </div>
</body>
</html>
